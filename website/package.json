    "eslint-plugin-vue": "^10.5.1",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.6.2",
    "sass": "^1.93.3",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.4.0",
    "typescript-eslint": "^8.46.3",
    "unplugin-auto-import": "^20.2.0",
